{% extends 'layout.html.twig' %}


{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/items_add.css">
	<link rel="stylesheet" href="/assets/css/navbar.css">
{% endblock %}

{% block navbar %}

	{% include "Components/_navbar.html.twig" %}

{% endblock %}


{% block content %}
	<div class="main-background"></div>
	<div class='page'>
		<div class="add-form">
			<h1>Ajouter un cadeau</h1>
				<div class="list-container">
				<h3 class="list-title">{{ list[0]['lname'] }}</h3>
				<p class="list-description">
					<strong>{{ list[0]['ldescription'] }}</strong>
				</p>
				</div>
			<div class="form-container">
				<form class="form" action="" method="POST">
					<label for="list_id">
						<p class="list_id">Choix de la liste</p>
					</label>
						<select name="list_id" id="list_id">
							{% for list in lists %}
    							<option value= {{ list[0]['lid'] }} > {{ list[0]['lname'] }} </option>
							{% endfor %}
						</select>
					<label for="giftName">
						<p class="giftName">Nom du cadeau</p>
					</label>
					<input type="text" id="giftName" placeholder="Entrer le nom du cadeau" name="giftName" required>
					<label for="price">
						<p class="price">Prix</p>
					</label>
					<input type="text" id="price" placeholder="Entrer le prix du cadeau" name="price" required>
					<label for="imgLink">
						<p class="imgLink">Lien de la photo</p>
					</label>
					<input type="text" id="imgLink" placeholder="Coller le lien de la photo" name="imgLink" required>
					<label for="giftLink">
						<p class="giftLink">Lien de l'article</p>
					</label>
					<input type="text" id="giftLink" placeholder="Coller le lien du cadeau" name="giftLink" required>
					<label for="description">
						<p class="description">Description</p>
					</label>
					<textarea class="description_area" id="description" placeholder="Indiquez des information sur votre cadeau" name="description" required></textarea>
					<div>
						<input type="submit" id='submit' value="Ajouter">
					</div>
				</form>
				<div class="list-share-container">
					<div class="article-container">
					            {% for article in list %}
                <div class="article">
                    <img class="article-img" alt="{{ article.aname }}"
                         src="{{ article.picture }}"/>
                    <h4 class="article-title">{{ article.aname }}</h4>
                    <h4 class="article-price">{{ article.price }}â‚¬</h4>
                    <p class="article-description">{{ article.adescription }}</p>
                    <a class="seeMore-button" href="{{ article.market_link }}">
                        <p>En savoir plus</p>
                    </a>
                </div>
            {% endfor %}
				</div>
			</div>
		</div>
	</div>
	</div>		


{% endblock %}

